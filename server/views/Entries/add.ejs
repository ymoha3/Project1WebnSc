<%- include ../partials/header.ejs %> 
<%- include ../partials/main_nav.ejs %>

<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">

            <h1><%= title %></h1>

            <form class="form" method="post">

                <div class="form-group">
                    <label for="nameTextField">Entry Number</label>
                    <input type="text" class="form-control"
                        id="nameTextField"
                        placeholder="Enter The Entry Number..."
                        name="EntryNum" required>
                </div>

                <div class="form-group">
                    <label for="titleTextField">Title</label>
                    <input type="text" class="form-control"
                        id="titleTextField"
                        placeholder="Enter The Entry Title..."
                        name="Title" required>
                </div>

                <div class="form-group">
                    <label for="messageTextArea">Message</label>
                    <textarea class="form-control"
                        id="messageTextArea"
                        placeholder="Write Your Diary Entry..."
                        name="Message"
                        required></textarea>
                </div>

                <div class="form-group">
                    <label for="dateTextField">Date</label>
                    <input type="text" class="form-control"
                        id="dateTextField"
                        placeholder="Enter Today's Date..."
                        name="Date" required>
                </div>

                <div class="form-group">
                    <label for="monthTextField">Month</label>
                    <input type="text" class="form-control"
                        id="monthTextField"
                        placeholder="Enter The Current Month..."
                        name="Month" required>
                </div>

                <div class="form-group">
                    <label for="yearTextField">Year</label>
                    <input type="text" class="form-control"
                        id="yearTextField"
                        placeholder="Enter The Current Year"
                        name="Year" required>
                </div>

                <br>

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit
                </button>

                <a href="/Entries" class="btn btn-warning">
                    <i class="fas fa-undo"></i> Cancel
                </a>

            </form>
        </div>
    </div>
</div>

<%- include ../partials/footer.ejs %>
